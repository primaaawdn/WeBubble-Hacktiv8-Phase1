<%- include('partials/Header') %>
<%- include('partials/NavBar') %>

<div class="container my-5">
    <h2 class="text-center mb-5">Profile Management</h2>

    <div class="d-flex flex-column align-items-center">
        <button 
            class="btn btn-primary mb-4" 
            onclick="window.location.href='/users/<%= UserId %>/profile/create'" 
            <%= hasProfile ? 'disabled' : '' %>
            style="width: 200px;"
        >
            Create Profile
        </button>

        <button 
            class="btn btn-info mb-4" 
            onclick="window.location.href='/users/<%= UserId %>/profile'" 
            <%= hasProfile ? '' : 'disabled' %>
            style="width: 200px;"
        >
            My Profile
        </button>
    </div>
</div>

<%- include('partials/Footer') %>
