<%- include('partials/Header') %>
<%- include('partials/NavBar') %>

<style>
	body {
		background-color: #ffffff;
	}
	.card {
		background-color: white;
	}
	.card-text {
		color: #333;
	}
	.btn-custom {
		background-color: #87CEEB; /* Warna biru muda */
		color: white;
		border: none;
		padding: 10px 20px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
		border-radius: 5px;
		transition: background-color 0.3s;
		cursor: pointer;
	}
	.btn-custom:hover {
		background-color: #00BFFF; /* Warna biru yang lebih gelap saat hover */
	}
</style>

<br> <br>
<a href="/posts/YourPost/<%= userId %>" class="btn-custom">Your Post</a>

<br><br>

<div class="container my-4">
    <h2 class="text-center mb-4">All Posts</h2>
    <div class="row">
        <% dataPost.forEach(post => { %>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm" style="border: none">
                <% if (post.imageUrl) { %>
                <img src="<%= post.imageUrl %>" class="card-img-top" alt="Post Image" />
                <% } %>
                <div class="card-body">
                    <p class="card-text"><%= post.content %></p>
                    <% if(post.User && post.User.Profile) { %>
                        <p class="card-text">
                            <small class="text-muted">
                                Posted by <%= post.User.Profile.name %> <br>
								<%= formattedDate(post.createdAt) %>
                            </small>
                        </p>
                    <% } %>
                    
                    <a href="/posts/<%= post.id %>">
                        <button class="btn-custom">Detail Post</button>
                    </a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <h6><strong>Total Posts:</strong> <%= totalPosts %></h6>
</div>

<%- include('partials/Footer') %>
