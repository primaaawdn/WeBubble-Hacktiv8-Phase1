<%- include('partials/Header') %> <%- include('partials/NavBar') %>

<style>
	body {
		background-color: #ffffff;
	}
	.card {
		background-color: white;
		border: none;
		transition: transform 0.3s;
		height: 100%;
	}
	.card:hover {
		transform: scale(1.05);
	}
	.card-text {
		color: #333;
	}
	.btn-custom {
		background-color: #87ceeb;
		color: black;
		border: none;
		padding: 5px 10px;
		text-align: center;
		text-decoration: none;
		display: inline-block;
		border-radius: 5px;
		transition: background-color 0.3s, transform 0.3s;
		cursor: pointer;
		font-size: 14px;
	}
	.btn-custom:hover {
		background-color: #00bfff;
		color: white;
		transform: scale(1.05);
	}
	.card-img-top {
		height: 200px;
		width: 100%;
		object-fit: cover;
	}
	.card-body {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		height: 200px;
		overflow: hidden;
	}
	h6 {
		margin-top: 20px;
	}
	.btn-group {
		display: flex;
		gap: 10px;
	}
	.small-text {
		font-size: 15px;
	}
	.large-text {
		font-size: 20px;
		overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
	}
</style>

<div class="container my-4">
	<div class="row mb-4">
		<div class="col-md-4">
			<a href="/users/<%= userId %>/posts/create" class="btn btn-custom mb-4"
				>Add new Post</a
			>
		</div>
	</div>

	

	<h2 class="text-center mb-4">All Posts</h2>
	<div class="row">
		<% dataPost.forEach(post => { %>

		<div class="col-md-4 mb-4">
			<div class="card shadow-sm h-100">
				<% if (post.imageUrl) { %>
				<img
					src="<%= post.imageUrl %>"
					class="card-img-top"
					alt="Post Image" />
				<% } %>
				<div class="card-body d-flex flex-column">
					<p class="card-text large-text"><%= post.content %></p>

					<% if (post.PostTags && post.PostTags.length > 0) { %>
						<p class="card-text small-text">
							Tags:
							<% post.PostTags.forEach(postTag => { %>
								<span class="badge bg-info">
									<%= postTag.Tag.tag %>
									<a 
										href="/posts/<%= post.id %>/tag/<%= postTag.TagsId %>/delete" 
										class="text-danger ms-1" 
										onclick="return confirm('Are you sure you want to delete this tag?')">
										&times;
									</a>
								</span>
							<% }); %>
						</p>
					<% } %>
					
					
					<p class="card-text small-text">

						<%= formattedTime(post.createdAt) %>ãƒ»<%= formattedDate(post.createdAt) %>
					</p>
					<div class="btn-group">
						<a
							href="/posts/YourPost/<%= userId %>/<%= post.id %>/edit"
							class="btn btn-custom"
							>Edit Post</a
						>
						<a
							href="/posts/YourPost/<%= userId %>/<%= post.id %>/delete"
							class="btn btn-custom"
							>Delete Post</a
						>
					</div>
				</div>

				<div class="row mt-3 mx-2 mb-4">
					<div class="col-md-9">
						<form action="/posts/<%= post.id %>/tag" method="post">
							<div class="form-group">
								<label for="tagsInput">Add Tags:</label>
								<input
									type="text"
									name="tags" 
									class="form-control"
									id="tagsInput"
									placeholder="cool, cute, love" />
							</div>
							<button type="submit" class="btn btn-primary mt-3">Submit</button>
						</form>
					</div>
				</div>
				
			</div>
		</div>
		<% }) %>
	</div>
</div>

<%- include('partials/Footer') %>
