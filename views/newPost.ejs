<%- include('partials/Header') %>
<%- include('partials/NavBar') %>

<div class="container my-4">
    <h3 class="text-center mb-4">Are you ready to tell your stories, <%= formattedText(userData.username) %>?</h3>

    <form action="/users/<%= userData.id %>/posts/create" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="exampleFormControlTextarea1" class="mb-2">Write your stories here~</label>
            <textarea name="content" class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
        </div>

        <div class="form-group">
            <label for="imageUrl">Upload an image (optional)</label>
            <input class="form-control-file" type="file" name="imageUrl" id="imageUrl">
        </div>

        <button class="btn btn-primary mt-3" type="submit">Post it</button>
    </form>
</div>

<%- include('partials/footer') %>
