<%- include('partials/Header') %> 
<%- include('partials/NavBar') %>

<div class="container my-5">
	<div class="row justify-content-center">
		<div class="col-12 col-md-8">
			<div class="card shadow-lg border-light rounded-3">
				<div class="card-body mx-3 my-3">
					<div class="d-flex flex-column flex-md-row align-items-center mb-4">
						<img
							src="<%= dataPost.User.Profile.profilePicture %>"
							alt="Profile Image"
							class="img-fluid rounded-circle me-3 mb-3 mb-md-0"
							style="
								width: 80px;
								height: 80px;
								object-fit: cover;
								border: 4px solid #f8f9fa;
							" />
						<div>
							<h4 class="card-title text-dark mb-1 font-weight-bold">
								<%= dataPost.User.Profile.name %>
							</h4>
							<h6 class="text-muted mb-0"><%= dataPost.User.username %></h6>
						</div>
					</div>

					<p class="lead text-dark mb-4"><%= dataPost.content %></p>

					<% if (dataPost.imageUrl) { %>
					<img
						src="<%= dataPost.imageUrl %>"
						alt="Post Image"
						class="img-fluid mb-4"
						style="
							width: 100%;
							max-height: 500px;
							object-fit: cover;
							box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
						" />
					<% } %>

					<div class="d-flex flex-column flex-md-row justify-content-between align-items-center text-muted">
						<p class="mb-0"><%= formattedTime(dataPost.createdAt) %>ãƒ»<%= formattedDate(dataPost.createdAt) %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%- include('partials/Footer') %>
