<%- include('partials/Header') %>
<%- include('partials/NavBar') %>

<div class="container my-4">
    <h2 class="text-center mb-4">Edit Your Profile</h2>

    <form action="/users/<%= UserId %>/profile/edit" method="POST" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
        </div>

        <div class="form-group mb-3">
            <label for="gender">Gender</label>
            <select class="form-control" id="gender" name="gender" required>
                <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="bio">Bio</label>
            <textarea class="form-control" id="bio" name="bio" rows="3" maxlength="50" required><%= user.bio || 'No bio available' %></textarea>
        </div>

        <div class="form-group mb-4">
            <label for="group">Group</label>
            <input type="text" class="form-control" id="group" name="group" value="<%= user.group %>" required>
        </div>

        <div class="form-group mb-3">
            <label for="profilePicture">Profile Picture</label>
            <input type="file" class="form-control-file" id="profilePicture" name="profilePicture" placeholder="Enter URL or leave blank for default">
        </div>

        <button type="submit" class="btn btn-info mt-3">Save Changes</button>
    </form>
</div>

<%- include('partials/Footer') %>
