<%- include('partials/Header') %>
<%- include('partials/NavBar') %>

<div class="container my-4">
    <h2 class="text-center mb-4">Edit Your Profile</h2>

    <form action="/users/<%= UserId %>/profile/<%= user.id %>/edit" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
        </div>

        <div class="form-group">
            <label for="gender">Gender</label>
            <select class="form-control" id="gender" name="gender" required>
                <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
                <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
            </select>
        </div>

        <div class="form-group">
            <label for="bio">Bio</label>
            <textarea class="form-control" id="bio" name="bio" rows="3" required><%= user.bio %></textarea>
        </div>

        <div class="form-group">
            <label for="group">Group</label>
            <input type="text" class="form-control" id="group" name="group" value="<%= user.group %>" required>
        </div>

        <div class="form-group">
            <label for="profilePicture">Profile Picture URL</label>
            <input type="text" class="form-control" id="profilePicture" name="profilePicture" value="<%= user.profilePicture %>">
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
    </form>
</div>

<%- include('partials/Footer') %>
